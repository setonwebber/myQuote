<h1 style="padding-top: 10px;">Search for quotes by category</h1>
<hr />
<%= form_tag search_path, method: :get do %>
  <div class="form-group" style="padding-bottom: 10px;">
    <%= text_field_tag :search_query, params[:search_query], placeholder: 'Enter quote', class: "form-control" %>
  </div>
  <%= submit_tag 'Search', class: "btn btn-primary" %>
<% end %>

<% if params[:search_query].present? %>
<h4 style="padding-top: 15px;">Results:</h4>
  <% if @quotes.present? %>
    <%= render partial: 'quotes/quote' %>
<% else %>
    <p>No matching quotes found.</p>
  <% end %>
<% end %>
