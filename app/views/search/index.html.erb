<h3 style="padding-top: 10px;">Search for quotes by philosopher</h3>

<%= form_tag search_path, method: :get do %>

    <div class="form-group" style="padding-bottom: 10px;">
        <%= text_field_tag :ingredient_query, params[:ingredient_query], placeholder: 'Enteran ingredient', class: "form-control" %>
    </div>

    <%= submit_tag 'Search Recipes', class: "btn btn-primary" %>
<% end %>