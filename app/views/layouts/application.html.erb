<!-- This is the application view, this is what everything will run inside of. -->
<!DOCTYPE html>
<html>
  <head>
    <title>Myquote</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  </head>

  <body>
  <!-- We render the header at the start of the page, this is the partial at views/layouts/_header -->
  <%= render partial: 'layouts/header' %>
  <!-- We create a little container that is buffered from the edges of the screen, to ensure a nice layout. Inside this we display whatever is currently being shown. -->
    <div class="container" style="margin-top:20px;">
      <%= yield %>
    </div>
  </body>
</html>
